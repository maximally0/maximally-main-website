# Supabase Configuration
# Client-side (used by Vite)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Server-side (required for Netlify functions)
# Note: Set these in Netlify Dashboard -> Site Settings -> Environment Variables
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Email Configuration (Resend)
RESEND_API_KEY=your_resend_api_key
FROM_EMAIL=noreply@yourdomain.com

# Platform Configuration
PLATFORM_URL=https://yourdomain.com
NODE_ENV=development

# Optional: Admin Invite Token
ADMIN_INVITE_TOKEN=your_secure_random_token

# Development: Skip OTP email verification (set to "true" to bypass)
# When enabled, OTP is set to "123456" and returned in response
SKIP_EMAIL_OTP=false
